#import autosub

		<table class="table-config">
			<tr>
				<td class="td-first-config"><a data-placement="right" data-toggle="tooltip" data-original-title="Download subtitles from Podnapisi? Default is Enabled.">Podnapisi</a></td>
				<td class="pull-right"><select name="usepodnapisi">
		#if $autosub.USEPODNAPISI
					<option value="True" selected="selected">Enabled</option>
					<option value="False">Disabled</option>
		#else
					<option value="True">Enabled</option>
					<option value="False" selected="selected">Disabled</option>
		#end if
				</select></td>
			</tr>
			
			<tr>
				<td class="td-first-config"><a data-placement="right" data-toggle="tooltip" data-original-title="Download subtitles from Subscene? Default is Enabled.">Subscene</a></td>
